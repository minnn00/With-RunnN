<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.with_runn.MyPageFragment"
        android:label="My Page"
        tools:layout="@layout/fragment_mypage" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.with_runn.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mapFragment_to_courseManageFragment"
            app:destination="@id/courseManageFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.with_runn.map.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>
    <fragment
        android:id="@+id/courseManageFragment"
        android:name="com.with_runn.CourseManageFragment"
        android:label="CourseManageFragment"
        tools:layout="@layout/fragment_course_manage"/>
</navigation>
