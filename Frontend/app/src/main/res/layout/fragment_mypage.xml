<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 마이페이지 타이틀 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="41dp">

        <TextView
            android:id="@+id/text_title_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="22dp"
            android:text="마이페이지"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#121212"
            android:fontFamily="@font/pretendard_semibold" />
    </FrameLayout>


    <!-- 상단 프로필 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:padding="20dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <!-- 프로필 이미지 -->
            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_circle"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />

            <!-- 연필 아이콘 (오른쪽 아래에 겹치게) -->
            <ImageView
                android:id="@+id/btn_edit_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:background="@drawable/bg_edit_circle"
                android:padding="4dp"
                android:src="@drawable/pen"
                android:scaleType="centerInside" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보리"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <!-- 팔로워 -->
                <TextView
                    android:id="@+id/text_follower_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로워"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/gray_950"
                    android:layout_marginEnd="9dp"/>

                <TextView
                    android:id="@+id/text_follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/gray_950"
                    android:layout_marginEnd="24dp" />

                <!-- 팔로잉 -->
                <TextView
                    android:id="@+id/text_following_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="팔로잉"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/gray_950"
                    android:layout_marginEnd="9dp"/>

                <TextView
                    android:id="@+id/text_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="86"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/gray_950"
                    android:layout_marginEnd="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <!-- 🟢 첫 줄 : 정보 + 도형 구분 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1년 3개월"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/gray_500" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/rectangle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="래브라도 리트리버"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/gray_500" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="9dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/rectangle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대형견"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/gray_500" />
                </LinearLayout>

                <!-- 🟢 두 번째 줄 : 성격 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="# 성격"
                        android:textColor="@color/gray_850"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:background="@drawable/bg_tag_label"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="에너지 폭발"
                        android:textColor="@color/green_700"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="외 2개"
                        android:textColor="@color/gray_750"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 🟢 세 번째 줄 : 산책 스타일 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="# 산책 스타일"
                        android:textColor="@color/gray_850"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:background="@drawable/bg_tag_label"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="속도 균형"
                        android:textColor="@color/green_700"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="외 2개"
                        android:textColor="@color/gray_750"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_regular"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 산책 함께 문구 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_slogan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="저랑 같이 산책해요 🐶"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13sp"
            android:textColor="@color/gray_950" />
    </LinearLayout>

    <!-- 탭 메뉴 -->
    <LinearLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <!-- 탭 텍스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tab_scrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="스크랩"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray_700"
                android:gravity="center"
                android:paddingVertical="12dp" />

            <TextView
                android:id="@+id/tab_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="좋아요"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray_400"
                android:gravity="center"
                android:paddingVertical="12dp" />

            <TextView
                android:id="@+id/tab_mycourses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="나의 산책코스"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray_400"
                android:gravity="center"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <!-- 인디케이터 -->
        <LinearLayout
            android:id="@+id/layout_indicator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/indicator_scrap"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/green_700" />

            <View
                android:id="@+id/indicator_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <View
                android:id="@+id/indicator_mycourses"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>

    <!-- ✅ 리스트 영역 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mypage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false" />

    <!-- ✅ 삭제 모드 / 완료 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="12dp">

        <Button
            android:id="@+id/btnDeleteMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제 모드"
            android:visibility="gone"
            android:backgroundTint="@color/gray_300"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/green_700"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
