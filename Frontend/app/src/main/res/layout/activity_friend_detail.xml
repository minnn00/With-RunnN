<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:fitsSystemWindows="true">

    <!-- 상단바 -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 위치 아이콘 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/ic_location_pin"
            android:contentDescription="위치" />

        <!-- 서울 마포구 텍스트 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="서울 마포구"
            android:textColor="#121212"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- 알림 아이콘 -->
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_bell"
                android:contentDescription="알림" />

            <!-- 알림 표시점 -->
            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/circle_background_red" />
        </FrameLayout>

        <!-- 채팅 아이콘 -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_chat"
            android:contentDescription="채팅" />

    </LinearLayout>

    <!-- 탭 컨테이너 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:elevation="100dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#FFFFFF">

        <!-- 추천 친구 탭 -->
        <LinearLayout
            android:id="@+id/recommended_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="1dp"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 친구"
                android:textColor="#121212"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- 선택 표시선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#15AB6C" />

        </LinearLayout>

        <!-- 모두 보기 탭 -->
        <LinearLayout
            android:id="@+id/all_friends_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:elevation="1dp"
            android:padding="16dp"
            android:minHeight="55dp">

            <TextView
                android:id="@+id/all_friends_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모두 보기"
                android:textColor="#A4A4A4"
                android:textSize="16sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <!-- 선택 표시선 (숨김) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- 강아지 정보 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dog_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="75dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pagination_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 강아지 이미지 -->
            <ImageView
                android:id="@+id/dog_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/jonny"
                android:scaleType="centerCrop"
                android:contentDescription="강아지 이미지" />

            <!-- 프로필 정보 -->

            <!-- 메뉴 버튼 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- 프로필 사진과 소개 -->

                <!-- 팔로우, 메시지 버튼 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- 프로필 사진 -->
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/circle_background_white"
                        android:clipToOutline="true"
                        android:contentDescription="프로필 사진"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jonny" />

                    <!-- 이름과 성별 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dog_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조니"
                            android:textColor="#121212"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="6dp"
                            android:contentDescription="성별"
                            android:src="@drawable/ic_male" />

                    </LinearLayout>

                    <!-- 한줄 소개 -->
                    <TextView
                        android:id="@+id/dog_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="안녕하세요! 달리기 좋아하는 3살 조니예요 :)"
                        android:textColor="#808080"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- 팔로우 버튼 -->
                    <TextView
                        android:id="@+id/follow_button"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:background="@drawable/rounded_button_green"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="팔로우"
                        android:textColor="#FEFEFE"
                        android:textSize="14sp" />

                    <!-- 메시지 버튼 -->
                    <TextView
                        android:id="@+id/message_button"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/rounded_button_white"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="메시지"
                        android:textColor="#15AB6C"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- 상세 정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- 나이 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="나이"
                            android:textColor="#808080"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dog_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="3년 6개월"
                            android:textColor="#4F4F4F"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 견종 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="견종"
                            android:textColor="#808080"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dog_breed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="래브라도 리트리버"
                            android:textColor="#4F4F4F"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 분류 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="분류"
                            android:textColor="#808080"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dog_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="대형견"
                            android:textColor="#4F4F4F"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="메뉴" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- 페이지네이션 인디케이터 -->
    <LinearLayout
        android:id="@+id/pagination_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/indicator_0"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_indicator_active"
            android:contentDescription="페이지 1" />

        <ImageView
            android:id="@+id/indicator_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_indicator_inactive"
            android:contentDescription="페이지 2" />

        <ImageView
            android:id="@+id/indicator_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_indicator_inactive"
            android:contentDescription="페이지 3" />

        <ImageView
            android:id="@+id/indicator_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/ic_indicator_inactive"
            android:contentDescription="페이지 4" />

    </LinearLayout>

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="#FEFEFE"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 친구 탭 (선택됨) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_selected_background">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_friends"
                android:contentDescription="친구"
                android:tint="#15AB6C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="친구"
                android:textColor="#15AB6C"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 산책코스 탭 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_course"
                android:contentDescription="산책코스"
                android:tint="#CFCFCF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="산책코스"
                android:textColor="#CFCFCF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 지도 탭 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_map"
                android:contentDescription="지도"
                android:tint="#CFCFCF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="지도"
                android:textColor="#CFCFCF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 마이페이지 탭 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_mypage"
                android:contentDescription="마이페이지"
                android:tint="#CFCFCF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="마이페이지"
                android:textColor="#CFCFCF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 