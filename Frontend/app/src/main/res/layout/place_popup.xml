<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="184dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_place_popup"
    android:layout_margin="16dp"
    android:elevation="6dp">

    <!-- 상단: 아이콘 + 제목 + 닫기버튼 -->
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_pin_red"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tv_place_title"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_weight="600"
            android:text="빵집"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/gray_950" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/close" />
    </LinearLayout>

    <!-- 코멘트 박스 -->
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="96dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_comment_box">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="견주의 한 마디 🐶"
            android:textSize="10sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_550"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_place_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="빵집 들러서 공원에서 먹을 빵 함께 골라요\n참고로 저는 치아바타가 좋아요 같이 빵 먹어요 "
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_950"
            android:layout_marginTop="2dp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

</LinearLayout>
