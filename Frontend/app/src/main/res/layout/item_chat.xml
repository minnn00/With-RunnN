<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="82dp">

    <!-- 삭제 버튼 배경 (스와이프 시 보임) -->
    <View
        android:id="@+id/delete_background"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#ff554c"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 삭제 버튼 텍스트 -->
    <TextView
        android:id="@+id/delete_button"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="삭제"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:background="#ff554c"
        android:visibility="gone"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 메인 채팅 아이템 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_item_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_card_background"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/jonny"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 두 번째 프로필 이미지 (겹친 이미지용) -->
        <ImageView
            android:id="@+id/profile_image_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/jonny"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            android:layout_marginStart="19dp"
            android:layout_marginTop="21dp" />

        <!-- 이름 -->
        <TextView
            android:id="@+id/chat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="조니"
            android:textColor="#212124"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintEnd_toStartOf="@id/chat_time"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 시간 -->
        <TextView
            android:id="@+id/chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:20"
            android:textColor="#808080"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 마지막 메시지 -->
        <TextView
            android:id="@+id/last_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="좋아요! 그럼 6시에 연남에서 보는 거 어떠세요?"
            android:textColor="#808080"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintEnd_toStartOf="@id/notification_badge"
            app:layout_constraintTop_toBottomOf="@id/chat_name" />

        <!-- 알림 배지 (마지막 메시지 바로 오른쪽) -->
        <View
            android:id="@+id/notification_badge"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/circle_background_red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/last_message"
            app:layout_constraintBottom_toBottomOf="@id/last_message" />

        <!-- 알림 개수 -->
        <TextView
            android:id="@+id/notification_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/notification_badge"
            app:layout_constraintTop_toTopOf="@id/notification_badge"
            app:layout_constraintBottom_toBottomOf="@id/notification_badge" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 