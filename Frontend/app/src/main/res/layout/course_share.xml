<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_share"
    android:layout_width="match_parent"
    android:layout_height="439dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- 콘텐츠 스크롤 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- 탭 -->
            <LinearLayout
                android:id="@+id/layout_tabs"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 채팅방 탭 -->
                <LinearLayout
                    android:id="@+id/tab_chat"
                    android:layout_width="162dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="0dp">

                    <TextView
                        android:id="@+id/text_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="채팅방"
                        android:textColor="@color/gray_950"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_regular" />

                    <View
                        android:id="@+id/indicator_chat"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/green_700"
                        android:visibility="visible" />
                </LinearLayout>

                <!-- 친구 탭 -->
                <LinearLayout
                    android:id="@+id/tab_friend"
                    android:layout_width="162dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="0dp">

                    <TextView
                        android:id="@+id/text_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="친구"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/gray_950" />

                    <View
                        android:id="@+id/indicator_friend"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/green_700"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- 검색창 -->
            <EditText
                android:id="@+id/edit_search"
                android:layout_width="325dp"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:hint="대화할 친구의 이름을 검색하세요"
                android:background="@drawable/search_edittext_background"
                android:drawableStart="@drawable/search"
                android:drawablePadding="5dp"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/gray_500"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_regular"
                android:singleLine="true"
                android:inputType="text" />

            <!-- 사용자 리스트 (채팅방 or 친구) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_targets"
                android:layout_width="326dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>

    <!-- 보내기 버튼 (항상 아래 고정) -->
    <Button
        android:id="@+id/btn_send"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:text="보내기"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_send_background_selector"
        android:backgroundTint="@null"
        android:textColor="@color/gray_050"
        android:enabled="false" />
</LinearLayout>