<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="157dp"
    android:layout_height="220dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 강아지 이미지 -->
        <ImageView
            android:id="@+id/dog_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="강아지 이미지" />

        <!-- 성격 태그들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <!-- 첫 번째 성격 태그 -->
            <TextView
                android:id="@+id/first_personality_tag"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/personality_tag_background"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="#차분함"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- 두 번째 성격 태그 -->
            <TextView
                android:id="@+id/second_personality_tag"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/personality_tag_background"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="#똑똑함"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 하단 정보 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- 성격 태그 -->
            <TextView
                android:id="@+id/personality_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#호기심쟁이"
                android:textColor="#15AB6C"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- 강아지 이름 -->
            <TextView
                android:id="@+id/dog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="마루"
                android:textColor="#121212"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView> 