<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/pin_index"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:gravity="center"

        style="@style/Text_Pretendard_Medium_16"
        android:text="5"
        android:textColor="@color/green_700"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/pin_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="9dp"
        android:paddingHorizontal="12dp"
        android:layout_weight="1"
        android:background="@drawable/bg_pin_item"

        style="@style/Text_Pretendard_Medium_14"
        android:textColor="@color/gray_700"
        android:text="예시"/>

    <ImageView
        android:id="@+id/pin_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_drag_indicator"
        app:tint="@color/gray_400"/>

</LinearLayout>