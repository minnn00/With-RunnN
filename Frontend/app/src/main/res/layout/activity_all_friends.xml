<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:fitsSystemWindows="true">

    <!-- 상단바 -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 위치 아이콘 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/ic_location_pin"
            android:contentDescription="위치" />

        <!-- 서울 마포구 텍스트 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="서울 마포구"
            android:textColor="#121212"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- 알림 아이콘 -->
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_bell"
                android:contentDescription="알림" />

            <!-- 알림 표시점 -->
            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/circle_background_red" />
        </FrameLayout>

        <!-- 채팅 아이콘 -->
        <ImageView
            android:id="@+id/chat_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_chat"
            android:contentDescription="채팅" />

    </LinearLayout>

    <!-- 탭 컨테이너 -->
    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <!-- 추천 친구 탭 (비활성) -->
        <LinearLayout
            android:id="@+id/recommended_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 친구"
                android:textColor="#A4A4A4"
                android:textSize="16sp"
                android:gravity="center" />

            <!-- 선택 표시선 (숨김) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <!-- 모두 보기 탭 (활성) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모두 보기"
                android:textColor="#121212"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- 선택 표시선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#15AB6C" />

        </LinearLayout>

    </LinearLayout>

    <!-- 검색바 -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/search_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tab_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:contentDescription="검색" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:hint="친구의 이름이나 성격을 검색하세요"
            android:textColor="#4F4F4F"
            android:textColorHint="#808080"
            android:textSize="14sp"
            android:background="@null"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/clear_search_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cancle"
            android:contentDescription="검색 지우기"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 강아지 카드 그리드 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friends_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="#FEFEFE"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 친구 탭 (선택됨) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_selected_background">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_friends"
                android:contentDescription="친구"
                android:tint="#15AB6C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="친구"
                android:textColor="#15AB6C"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 산책코스 탭 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_route"
                android:contentDescription="산책코스"
                android:tint="#CFCFCF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="산책코스"
                android:textColor="#CFCFCF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 지도 탭 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_map"
                android:contentDescription="지도"
                android:tint="#CFCFCF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="지도"
                android:textColor="#CFCFCF"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 마이페이지 탭 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_person"
                android:contentDescription="마이페이지"
                android:tint="#CFCFCF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="마이페이지"
                android:textColor="#CFCFCF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 