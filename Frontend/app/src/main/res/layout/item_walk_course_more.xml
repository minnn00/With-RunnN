<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- ❌ 삭제 아이콘 (삭제 모드일 때만 보이게 제어됨) -->
    <ImageView
        android:id="@+id/icon_cancle"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_delete"
        android:visibility="gone" />

    <!-- 썸네일 이미지 -->
    <ImageView
        android:id="@+id/image_course"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        android:layout_marginEnd="12dp" />

    <!-- 텍스트 및 아이콘 영역 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 태그들 -->
        <LinearLayout
            android:id="@+id/layout_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#느긋한 산책"
                android:textColor="@color/gray_600"
                android:textSize="10sp"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tag_label"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp" />

            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#산책브금_on"
                android:textColor="@color/gray_600"
                android:textSize="10sp"
                android:fontFamily="@font/pretendard_regular"
                android:background="@drawable/bg_tag_label"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp" />
        </LinearLayout>

        <!-- 코스 이름 -->
        <TextView
            android:id="@+id/text_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쫄래쫄래 감성로드"
            android:textColor="@color/gray_950"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- 거리 / 시간 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0km"
                android:textSize="12sp"
                android:letterSpacing="0.025"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray_600"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="9dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/rectangle"/>

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32분"
                android:textSize="12sp"
                android:letterSpacing="0.025"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/blue_500" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/icon_scrap"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_bookmark" />

    <!-- 좋아요 하트 아이콘 -->
    <ImageView
        android:id="@+id/icon_heart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_heart_active" />
</LinearLayout>