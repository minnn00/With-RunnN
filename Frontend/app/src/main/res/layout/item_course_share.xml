<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- 산책코스 공유 카드 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/course_share_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/course_share_background"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 제목 -->
        <TextView
            android:id="@+id/share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책코스를 공유하였습니다."
            android:textColor="#15ab6c"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 카드 내용 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/course_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/course_card_background"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/share_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 이미지 -->
            <ImageView
                android:id="@+id/course_image"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/course_chat"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 텍스트 영역 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/text_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/course_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- 제목 -->
                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우리 동네 강아지 모임"
                    android:textColor="#121212"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- 태그들 -->
                <LinearLayout
                    android:id="@+id/tags_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/course_name"
                    app:layout_constraintStart_toStartOf="parent">

                    <!-- 태그 1 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#이웃사촌"
                        android:textColor="#808080"
                        android:textSize="10sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:background="@drawable/course_tag_background"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginEnd="4dp" />

                    <!-- 태그 2 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#같이산책해요"
                        android:textColor="#808080"
                        android:textSize="10sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:background="@drawable/course_tag_background"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 