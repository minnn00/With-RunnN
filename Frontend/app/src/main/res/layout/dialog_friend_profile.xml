<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#802F2F2F">

    <!-- 팝업 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/popup_card"
        android:layout_width="324dp"
        android:layout_height="423dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <!-- 메뉴 버튼 -->
            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="메뉴"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 닫기 버튼 -->
            <ImageView
                android:id="@+id/close_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ic_cancle"
                android:contentDescription="닫기"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 프로필 이미지 -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 이름과 성별 -->
            <LinearLayout
                android:id="@+id/name_gender_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/dog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마루"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/pretendard_semibold" />

                <ImageView
                    android:id="@+id/gender_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_male"
                    android:contentDescription="성별" />

            </LinearLayout>

            <!-- 한줄 소개 -->
            <TextView
                android:id="@+id/dog_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="안녕하세요 마루입니다요"
                android:textSize="12sp"
                android:textColor="#808080"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/name_gender_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 팔로우/메시지 버튼 -->
            <LinearLayout
                android:id="@+id/action_buttons"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/dog_intro">

                <!-- 팔로우 버튼 -->
                <TextView
                    android:id="@+id/follow_button"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="팔로우"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/pretendard_medium"
                    android:background="@drawable/rounded_button_green"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@null" />

                <!-- 메시지 버튼 -->
                <TextView
                    android:id="@+id/message_button"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="메시지"
                    android:textSize="12sp"
                    android:textColor="#15AB6C"
                    android:fontFamily="@font/pretendard_medium"
                    android:background="#FBFBFB"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@null" />

            </LinearLayout>

            <!-- 상세 정보 -->
            <LinearLayout
                android:id="@+id/detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/action_buttons">

                <!-- 나이 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나이"
                        android:textSize="13sp"
                        android:textColor="#808080"
                        android:fontFamily="@font/pretendard_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3살"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="end" />

                </LinearLayout>

                <!-- 견종 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="견종"
                        android:textSize="13sp"
                        android:textColor="#808080"
                        android:fontFamily="@font/pretendard_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="골든 리트리버"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="end" />

                </LinearLayout>

                <!-- 분류 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분류"
                        android:textSize="13sp"
                        android:textColor="#808080"
                        android:fontFamily="@font/pretendard_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="대형견"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/pretendard_medium"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout> 